{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "isolatedModules": false,
    "allowImportingTsExtensions": true,
    "noEmit": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "scripts/**/*"
  ]
}